@{
    ViewData["Title"] = "Аренда";
}
@model ApplicationRent.Data.Identity.Place

<h2>Подробная информация</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Размер места
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SizePlace) м²
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        @if (!string.IsNullOrEmpty(Model.ImageFileName1))
        {
            <dt class="col-sm-2">Image 1</dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/place/" + Model.ImageFileName1)" alt="Image 1" style="max-width: 200px; max-height: 200px;" />
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.ImageFileName2))
        {
            <dt class="col-sm-2">Image 2</dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/place/" + Model.ImageFileName2)" alt="Image 2" style="max-width: 200px; max-height: 200px;" />
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.ImageFileName3))
        {
            <dt class="col-sm-2">Image 3</dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/place/" + Model.ImageFileName3)" alt="Image 3" style="max-width: 200px; max-height: 200px;" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

