@model IEnumerable<ApplicationRent.Data.Identity.Feedback>

@{
    ViewData["Title"] = "Отправленные формы обратной связи";
}

<h2>@ViewData["Title"]</h2>
<button id="toggleReadFeedback" class="btn btn-info">Скрыть/Показать прочитанные</button>
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Тема</th>
            <th>Сообщение</th>
            <th>Платформа</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr class="@(feedback.Status ? "feedback-read" : "")">
                <td>@feedback.Name</td>
                <td>@feedback.Email</td>
                <td>@feedback.Subject</td>
                <td>@feedback.Message</td>
                <td>@feedback.Platform</td>
                <td>@(feedback.Status ? "Просмотрено" : "Не просмотрено")</td>
                <td>
                    <form asp-action="ChangeFeedbackStatus" asp-route-id="@feedback.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-primary">Изменить статус</button>
                    </form>
                    <form asp-action="DeleteFeedback" asp-route-id="@feedback.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить эту запись?');">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("toggleReadFeedback").addEventListener("click", function () {
                var readFeedbackRows = document.querySelectorAll(".feedback-read");
                readFeedbackRows.forEach(function (row) {
                    row.style.display = row.style.display === 'none' ? '' : 'none';
                });
            });
        });
    </script>
}
