<form asp-action="ConfirmRent" method="post">
    <input type="hidden" asp-for="PlaceId" />
    <div class="form-group">
        <label asp-for="StartRent">Дата начала</label>
        <input asp-for="StartRent" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="EndRent">Дата окончания</label>
        <input asp-for="EndRent" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Подтвердить аренду</button>
</form>