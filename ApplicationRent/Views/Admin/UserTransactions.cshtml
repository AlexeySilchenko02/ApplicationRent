@model IEnumerable<ApplicationRent.Data.Identity.TransactionHistory>

<main class="main lk">
    <section class="lk-title-section">
        <div class="lk-title-container">
            <h1 class="lk-title-h1">Транзакции пользователя</h1>
        </div>
    </section>

    <div class="back-btn-mb">
        <button type="button" class="lg-small-btn" onclick="window.location.href='@Url.Action("Users", "Admin")'">Назад</button>
    </div>


    @if (Model.Any())
    {
        <div style="overflow-x: auto;">
            <table class="lk-table">
                <thead>
                    <tr>
                        <th>Сумма</th>
                        <th>Дата транзакции</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody id="transactions-table">
                    @foreach (var transaction in Model)
                    {
                        <tr id="transaction-@transaction.Id">
                            <td>@transaction.Amount</td>
                            <td>@transaction.TransactionDate</td>
                            <td>
                                <button class="btn btn-danger delete-transaction" data-id="@transaction.Id">Удалить</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    }
    else
    {
        <p>Нет транзакций</p>
    }
</main>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.delete-transaction').click(function () {
                var transactionId = $(this).data('id');
                var row = $('#transaction-' + transactionId);

                if (confirm('Вы уверены, что хотите удалить транзакцию?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteTransactionAjax", "Admin")',
                        type: 'POST',
                        data: { id: transactionId },
                        success: function (response) {
                            if (response.success) {
                                row.remove();
                                if ($('#transactions-table tr').length === 0) {
                                    $('#transactions-table').closest('main').append('<p>Нет транзакций</p>');
                                }
                            } else {
                                alert('Ошибка при удалении транзакции: ' + response.error);
                            }
                        },
                        error: function () {
                            alert('Ошибка при выполнении запроса.');
                        }
                    });
                }
            });
        });
    </script>
}
