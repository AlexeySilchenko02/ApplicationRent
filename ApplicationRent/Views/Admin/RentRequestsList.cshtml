@model IEnumerable<ApplicationRent.Data.Identity.RequestsRent>

@{
    ViewData["Title"] = "Заявки на аренду";
}

<h2>@ViewData["Title"]</h2>
<button id="toggleReadRequests" class="btn btn-info">Скрыть/Показать просмотренные</button>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Пользователь</th>
            <th>Место</th>
            <th>Начало аренды</th>
            <th>Конец аренды</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr class ="@(request.Status ? "request-read" : "")">
                <td>@request.Id</td>
                <td>@request.UserName</td>
                <td>@request.PlaceId</td>
                <td>@request.StartRent</td>
                <td>@request.EndRent</td>
                <td>@(request.Status ? "Просмотрено" : "Не просмотрено")</td>
                <td>
                    <form asp-action="ChangeRequestStatus" asp-route-id="@request.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-primary">Изменить статус</button>
                    </form>
                    <form asp-action="DeleteRequest" asp-route-id="@request.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить эту заявку?');">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("toggleReadRequests").addEventListener("click", function () {
                var readRequestRows = document.querySelectorAll(".request-read");
                readRequestRows.forEach(function (row) {
                    row.style.display = row.style.display === 'none' ? '' : 'none';
                });
            });
        });
    </script>
}
