@model IEnumerable<ApplicationRent.Data.Identity.ApplicationIdentityUser>

<main class="main lk">
    <section class="lk-title-section">
        <div class="lk-title-container">
            <h1 class="lk-title-h1">Пользователи</h1>
        </div>
    </section>

    <div class="back-btn-mb">
        <button type="button" class="lg-small-btn" onclick="window.location.href='@Url.Action("Index", "Admin")'">Назад</button>
    </div>

    <div style="overflow-x: auto;">
        <table class="lk-table">
            <thead>
                <tr>
                    <th>Полное имя</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th>Админ</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullNameUser</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Admin</td>
                        <td>
                            @* <a href="@Url.Action("ToggleAdminStatus", "Admin", new { id = user.Id })" class="btn btn-primary">
                        Изменить статус
                        </a> *@
                            <form action="@Url.Action("DeleteUser", "Admin")" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить пользователя?');">Удалить пользователя</button>
                            </form>
                            <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-secondary">
                                Изменить
                            </a>
                            <a href="@Url.Action("UserTransactions", "Admin", new { userId = user.Id })" class="btn btn-info">Просмотр транзакций</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
 
    
</main>

