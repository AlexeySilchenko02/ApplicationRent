                </button> *@
                <div class="header-rent-nav-container">
                    <ul class="header-rent-list">
                        <li class="header-nav-item">
                            <a class="header-rent-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="header-nav-item">
                            <a class="header-rent-link" asp-area="" asp-controller="Services" asp-action="Index">Услуги</a>
                        </li>
                        <li class="header-nav-item">
                            <a class="header-rent-link" asp-area="" asp-controller="Place" asp-action="Index">Аренда</a>
                        </li>
                        <li class="header-nav-item">
                            <a class="header-rent-link" asp-area="" asp-controller="Feedback" asp-action="Index">Контакты</a>
                        </li>
                        @await Component.InvokeAsync("AdminNavigation")
                        <!--Отображеие кнопок регистрации и имени в панели навигации-->
                        @await Component.InvokeAsync("UserNavigation")
                    </ul>                    
                </div>
            </div>
        </nav>
    </header>

